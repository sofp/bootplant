<?php
/**
 * Template part for displaying posts.
 *
 * @link https://codex.wordpress.org/Template_Hierarchy
 *
 * @package BootPlant
 */

?>
<div class="row">
  <div class="col-md-6">
<?php the_post_thumbnail(array(407, 209)); ?>
  </div>
  <div class="col-md-6">
	<h2><a href="<?php the_permalink(); ?>"><?php the_title(); ?></a></h2>
<?php
if (is_archive()) {
    the_excerpt();
} else {
    the_content();
}
?>
  </div>
</div>

<hr>

